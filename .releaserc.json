{
  "branches": [
    "main"
  ],
  "repositoryUrl": "https://github.com/bealers/elizify.git",
  "plugins": [
    [
      "@semantic-release/commit-analyzer",
      {
        "releaseRules": [
          {
            "type": "feat",
            "scope": "major",
            "release": "major"
          },
          {
            "type": "feat",
            "scope": "minor",
            "release": "minor"
          },
          {
            "type": "feat",
            "release": "minor"
          },
          {
            "type": "fix",
            "scope": "critical",
            "release": "patch"
          },
          {
            "type": "fix",
            "scope": "security",
            "release": "patch"
          },
          {
            "type": "perf",
            "release": "patch"
          },
          {
            "type": "sync",
            "release": "patch"
          },
          {
            "breaking": true,
            "release": "major"
          },
          {
            "type": "docs",
            "release": false
          },
          {
            "type": "style",
            "release": false
          },
          {
            "type": "refactor",
            "release": false
          },
          {
            "type": "test",
            "release": false
          },
          {
            "type": "build",
            "release": false
          },
          {
            "type": "ci",
            "release": false
          },
          {
            "type": "chore",
            "release": false
          }
        ]
      }
    ],
    [
      "@semantic-release/release-notes-generator",
      {
        "preset": "conventionalcommits",
        "presetConfig": {
          "types": [
            {
              "type": "feat",
              "section": "Features"
            },
            {
              "type": "fix",
              "section": "Bug Fixes"
            },
            {
              "type": "perf",
              "section": "Performance"
            },
            {
              "type": "sync",
              "section": "Updates"
            }
          ]
        }
      }
    ],
    [
      "@semantic-release/changelog",
      {
        "changelogFile": "CHANGELOG.md"
      }
    ],
    [
      "@semantic-release/npm",
      {
        "npmPublish": false
      }
    ],
    [
      "@semantic-release/git",
      {
        "assets": [
          "CHANGELOG.md",
          "package.json"
        ],
        "message": "chore: release ${nextRelease.version}\\n\\n${nextRelease.notes}"
      }
    ],
    [
      "@semantic-release/github",
      {
        "assets": [
          {
            "path": "docker-compose.yaml",
            "name": "docker-compose.yaml",
            "label": "Docker Compose (Full)"
          },
          {
            "path": "docker-compose.slim.yaml",
            "name": "docker-compose.slim.yaml",
            "label": "Docker Compose (Slim)"
          },
          {
            "path": "Dockerfile",
            "name": "Dockerfile",
            "label": "Dockerfile"
          },
          {
            "path": "README.md",
            "name": "README.md",
            "label": "Documentation"
          },
          {
            "path": "package.json",
            "name": "package.json",
            "label": "Package Configuration"
          },
          {
            "path": ".env.example",
            "name": ".env.example",
            "label": "Environment Template"
          }
        ]
      }
    ]
  ]
}